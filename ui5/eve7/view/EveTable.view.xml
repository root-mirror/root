<core:View
   controllerName="rootui5.eve7.controller.EveTable"
   xmlns:core="sap.ui.core"
   xmlns="sap.uxap"
   xmlns:layout="sap.ui.layout"
   xmlns:m="sap.m"
   xmlns:table="sap.ui.table"
   xmlns:f="sap.ui.layout.form"
   height="100%">
   <m:FlexBox  height="100%" direction="Column">
   <ObjectPageHeaderContent id="header" >
      <content>
        <layout:VerticalLayout>
          <m:Label text="Choose Collection:" />
	  <m:ComboBox id="ccombo" change="collectionChanged"
				items="{
				       path: 'collections>/itemx'
				}">
				<core:Item key="{collections>key}" text="{collections>text}" />
			</m:ComboBox>
         </layout:VerticalLayout>
         <layout:VerticalLayout>
           <m:Label text="Edit table:" />
            <m:Button icon="sap-icon://edit"
                                          press="toggleTableEdit"
                                          tooltip="toggle table edit"/>

         </layout:VerticalLayout>
      </content>
    </ObjectPageHeaderContent>
    <table:Table
        id="table"
        height="100%"
        class="sapUiNoMarginTop"
        selectionMode="None"
        editable="false"
        showColumnVisibilityMenu="true"
        visibleRowCountMode="Auto">
      <table:layoutData>
        <m:FlexItemData growFactor="1"/>
      </table:layoutData>
    </table:Table>
  </m:FlexBox>
</core:View>
